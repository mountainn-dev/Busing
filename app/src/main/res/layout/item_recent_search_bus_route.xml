<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/clBusRouteRecentSearch"
    android:layout_width="@dimen/width_item_recent_search"
    android:layout_height="match_parent"
    android:layout_marginEnd="@dimen/margin_default"
    android:orientation="horizontal"
    android:gravity="center"
    android:weightSum="1"
    android:background="@drawable/background_white_rounded_rectangle">

    <TextView
        android:id="@+id/txtBusRouteRecentSearchName"
        android:layout_width="@dimen/zero_width"
        android:layout_height="wrap_content"
        android:layout_weight="0.8"
        android:gravity="center"
        android:maxLines="1"
        android:ellipsize="end" />

    <TextView
        android:id="@+id/btnDelete"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="X"
        android:textStyle="bold"
        android:gravity="center"
        android:clickable="true"
        android:textColor="@color/semi_light_grey"/>

</LinearLayout>